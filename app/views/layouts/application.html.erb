<!DOCTYPE html>
<html>
  <head>
    <title>Cookbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= flash[:error] %>
    <%= flash[:alert] %>
    <%= flash[:notice] %>

  <nav>
    <h1> <%= link_to 'CookBook', root_path %> </h1>

    <%= form_tag(search_path, method:  :get) do %>
      <%= label_tag(:search_title, "Buscar por:") %>
      <%= text_field_tag(:search_title) %>
      <%= submit_tag("Buscar") %>
    <% end %>

    <%= link_to 'Inicio', root_path %>
    <%#= link_to 'Minhas Receitas', new_user_session_path %>
    <%= link_to 'Cadastrar Receita', new_recipe_path %>

    <% if user_signed_in? %>
      Olá <%= current_user.email %>
      <%= link_to 'Enviar uma receita', new_recipe_path %>
      <%= link_to 'Sair', destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to 'Iniciar sessão', new_user_session_path %>
    <% end %>

  </nav>
    Tipos de Receitas
    <%# @recipe_types.each do |type| %>
      <%#= link_to type.recipe_type.name %>
      <ul>
        <li><%#= type.recipe_type.name %></li>
      </ul> 
    <%#end%>




    <%= yield %>
  </body>
</html>
