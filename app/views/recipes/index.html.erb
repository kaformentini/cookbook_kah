CookBook
<p>Bem-vindo ao maior livro de receitas online</p>

<%#= link_to 'Enviar uma receita', new_recipe_path %>
<%= link_to 'Registrar Tipo de Receita', new_recipe_type_path %>
<%= link_to 'Registrar Tipo de Cozinha', new_cuisine_path %>

<% @recipes.each do |recipe| %>
  <h1><%= link_to recipe.title, recipe %></h1>
  <%= image_tag(recipe.image_recipe) if recipe.image_recipe.attached?%>
  <ul>
    <li><%= recipe.recipe_type.name %></li>
    <li><%= recipe.cuisine.cuisine_name %></li>
    <li><%= recipe.difficulty %></li>
    <li><%= recipe.cook_time_min %></li>
  </ul>
<% end %>
